# Kodi Connection Settings
# Copy this file to .env.local and fill in your actual values

# Kodi host URL (without trailing slash)
# Examples:
#   http://localhost:8080
#   http://192.168.1.100:8080
#   https://kodi.example.com
VITE_KODI_HOST=http://localhost:8080

# Kodi JSON-RPC endpoint path (usually /jsonrpc)
VITE_KODI_JSONRPC_PATH=/jsonrpc

# Kodi authentication (leave empty if not required)
# If your Kodi instance has authentication enabled, provide credentials here
VITE_KODI_USERNAME=
VITE_KODI_PASSWORD=
